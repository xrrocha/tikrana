{
  "name": "tikrana",
  "version": "0.1.0",
  "description": "Browser-native, offline-capable declarative data translation framework",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build && mv dist/index.html dist/tikrana.html",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test tests/e2e/contract",
    "test:e2e:demo": "playwright test tests/e2e/demo",
    "test:e2e:all": "playwright test",
    "test:e2e:headed": "HEADED=1 playwright test",
    "test:e2e:kotlin": "USE_KOTLIN=1 playwright test tests/e2e/contract",
    "test:e2e:kotlin:headed": "USE_KOTLIN=1 HEADED=1 playwright test tests/e2e/contract",
    "test:e2e:update-snapshots": "USE_KOTLIN=1 playwright test tests/e2e/contract --update-snapshots",
    "test:e2e:update-snapshots:headed": "USE_KOTLIN=1 HEADED=1 playwright test tests/e2e/contract --update-snapshots",
    "test:e2e:demo:update-snapshots": "playwright test tests/e2e/demo --update-snapshots",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:all": "vitest run && playwright test tests/e2e/demo"
  },
  "dependencies": {
    "alpinejs": "^3.15.2",
    "jszip": "^3.10.1",
    "xlsx": "^0.18.5",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/alpinejs": "^3.13.11",
    "@types/bun": "latest",
    "vite": "^7.2.7",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
